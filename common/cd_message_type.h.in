#ifndef CD_MESSAGE_TYPE_H
#define CD_MESSAGE_TYPE_H

#ifdef __cplusplus
extern "C" {
#endif

#include <stdbool.h>
#include <stdint.h>

#define CD_BUILDTIME_VERSION "@version@"
#define CD_MESSAGE_START_HASH (0xECDE)

#define CD_MESSAGE_PROCNAME_LEN (32)
#define CD_MESSAGE_FILENAME_LEN (256)
#define CD_CRASHID_LEN (32)
#define CD_CRASHCONTEXT_LEN (32)
#define CD_VERSION_STRING_LEN (8)

#ifndef CD_MESSAGE_PACKED
#define CD_MESSAGE_PACKED __attribute__((aligned(1), packed))
#endif

typedef enum _CDMessageType {
    CD_CORE_UNKNOWN,
    CD_CORE_NEW,
    CD_CORE_UPDATE,
    CD_CORE_COMPLETE,
    CD_CORE_FAILED,
    CD_MESSAGE_CHAR,
    CD_MESSAGE_RAW
} cdm_msgtype;

typedef struct _CDInfoNew {
    int pid;
    int coresig;
    uint64 tstamp;
    char pname[CD_MESSAGE_PROCNAME_LEN];
    char tname[CD_MESSAGE_PROCNAME_LEN];
} CDInfoNew;

typedef struct _CDInfoUpdate {
    char crashid[CD_CRASHID_LEN];
    char vectorid[CD_CRASHID_LEN];
    char contextid[CD_CRASHCONTEXT_LEN];
} CDInfoUpdate;

typedef struct _CDInfoComplete {
    char core_file[CD_MESSAGE_FILENAME_LEN];
} CDInfoComplete;

typedef union _CDMessageData {
    CDInfoNew regnew;
    CDInfoUpdate update;
    CDInfoComplete complete;
} CDMessageData;

typedef struct _CDMessageHdr {
    uint16 hsh;
    uint16 session;
    uint8 version[CD_VERSION_STRING_LEN];
    CDMessageType type;
    uint32 data_size;
} CD_MESSAGE_PACKED CDMessageHdr;

typedef struct _CDMessage {
    CDMessageHdr hdr;
    void *data;
} CD_MESSAGE_PACKED CDMessage;

#ifdef __cplusplus
}
#endif

#endif /* CD_MESSAGE_TYPE_H */
