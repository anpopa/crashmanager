###############################################################################
[Unit]
Description=Crasmanager service

[Service]
Type=simple
User=alinp
Group=users
ExecStart=@install_prefix@/bin/crashmanager
RuntimeDirectory="crashmanager"
StateDirectory="crashmanager"
WatchdogSec=30

[Install]
WantedBy=multi-user.target
